{
    "actorSpecification": 1,
    "schemaVersion": 1,
    "title": "Surebet Arbitrage Scraper â€“ Output",
    "type": "object",

    "properties": {
        "sport": { "title": "Sport", "type": "string" },
        "league": { "title": "League", "type": "string" },

        "date": {
            "title": "Event Date",
            "type": "string",
            "format": "date-time"
        },

        "home": { "title": "Home Team / Player", "type": "string" },
        "away": { "title": "Away Team / Player", "type": "string" },

        "outcomes": {
            "title": "Outcomes (raw odds)",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "outcome": { "type": "string" },
                    "odd": { "type": "number" },
                    "broker": { "type": "string" }
                },
                "required": ["outcome", "odd", "broker"]
            }
        },

        "allocation": {
            "title": "Calculated Allocation",
            "type": "object",
            "properties": {
                "isSurebet": { "type": "boolean" },

                "allocation": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "outcome": { "type": "string" },
                            "stake": { "type": "number" }
                        },
                        "required": ["outcome", "stake"]
                    }
                },

                "profit": { "type": "number" },
                "surebetPercentage": { "type": "number" }
            },
            "required": ["isSurebet", "profit", "surebetPercentage"]
        }
    },

    "required": ["sport", "league", "date", "outcomes", "allocation"]
}
